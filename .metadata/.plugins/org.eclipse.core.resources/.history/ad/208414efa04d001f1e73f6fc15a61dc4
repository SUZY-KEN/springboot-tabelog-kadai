package com.example.nagoyameshi.repository;

import java.util.List;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import com.example.nagoyameshi.entity.Restaurants;
import com.example.nagoyameshi.entity.Review;
import com.example.nagoyameshi.entity.Users;



public interface ReviewRepository extends JpaRepository<Review, Integer>{
	
	public List<Review>findTop6ByRestaurantsOrderByCreatedAtDesc(Restaurants restaurants) ;
	public Review findByRestaurantsAndUsers(Restaurants restaurants,Users users);
	public long countByRestaurants(Restaurants restaurants);
	public Page<Review>findByRestaurantsOrderByCreatedAtDesc(Restaurants restaurants,Pageable pageable) ;
}
