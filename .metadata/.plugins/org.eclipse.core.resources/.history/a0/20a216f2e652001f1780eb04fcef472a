let maxDate = new Date();
 maxDate = maxDate.setMonth(maxDate.getMonth() + 2);
 
// 予約日登録用
 flatpickr('#checkinDate', {
   mode: "single",
   locale: 'ja',
   minDate: 'today',
   maxDate: maxDate
 });


//会社設立日編集用
 let minDate=new Date();
 flatpickr('#establishDate', {
   mode: "single",
   locale: 'ja',
   minDate: '1800-01-01',
   maxDate: minDate
 });