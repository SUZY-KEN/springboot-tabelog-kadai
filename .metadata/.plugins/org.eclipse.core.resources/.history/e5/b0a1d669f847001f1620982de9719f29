package com.example.nagoyameshi.repository;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import com.example.nagoyameshi.entity.Category;
import com.example.nagoyameshi.entity.Restaurants;

public interface ResutaurantRepository extends JpaRepository<Restaurants, Integer> {
	public Page<Restaurants>findByNameLikeByCreatedAtDesc(String namekeyword,Pageable pageable);
	public Page<Restaurants>findByCategory(Category category,Pageable pageable);
}
